pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Hello Build'
            }
        }
        stage('Test') {
            steps {
                echo 'Hello Test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello Deploy'
            }
        }
    }
    post {
        always {
            echo "Always"
        }
        success {
            echo "success"
        }
        failure {
            echo "failure"
        }
        cleanup {
            echo "cleanup"
        }
    }
}